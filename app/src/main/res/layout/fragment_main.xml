<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainActivityFragment">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/map_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructions"
        android:orientation="horizontal"
        android:background="@color/semi_transparent_white"
        android:layout_margin="8dp"
        android:gravity="center"
        android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action"
        android:text="@string/scan_a_tag_nto_check_in"
        android:textSize="48sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/primary_dark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_leak_add_black_24dp"
        android:padding="8dp" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:visibility="invisible">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_re_currently_at"
            android:textColor="@color/primary_dark"
            android:layout_marginBottom="-6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Home"
            android:textColor="@color/accent"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_marginBottom="-6dp"
            android:id="@+id/place_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_dark"
            android:text="@string/for_hours_minutes"
            android:id="@+id/place_time" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
